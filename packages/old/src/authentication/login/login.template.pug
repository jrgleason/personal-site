.login
    form.layout-column( (ngSubmit)="onSubmit($event)" )
        .username
            label(for="username") Username
            input#username.form-control(type='text', name='username', placeholder='Username', autofocus, [(ngModel)]="model.username")
        .password
            label(for="password") Password
            input#password.form-control(type='password', name='password', placeholder='Password', [(ngModel)]="model.password")
        .footer
            button.btn.btn-primary(type='submit') Login